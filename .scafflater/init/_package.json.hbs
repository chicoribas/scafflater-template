{{!-- @scf-option  { "targetName": "package.json" } --}}
{{!-- @scf-option  { "appenders": ["./appenders/json-appender"] } --}}

{
  "name": "{{parameters.name}}",
  "version": "1.0.0",
  "description": "{{parameters.description}}"
  {{#if gitUser}}
  ,
  "author": "{{gitUser.user.name}} ({{gitUser.user.email}})"
  {{/if}}
  {{#if git.remote.origin.url}}
  ,
    "repository": {
      "type": "git",
      "url": "git+{{git.remote.origin.url}}"
    },
    "bugs": {
      "url": "{{git.bugs_url}}"
    },
    "homepage": "{{git.home_url}}"
  {{/if}}
}
